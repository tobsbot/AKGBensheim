<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/tab_height"
    tools:context="de.tobiaserthal.akgbensheim.foodplan.FoodPlanFragment">

        <com.epapyrus.plugpdf.core.viewer.ReaderView
            android:id="@+id/pdfReader"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:text="@string/empty_title_food"
        android:gravity="center"
        android:drawableTop="@drawable/ic_drawer_food"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</FrameLayout>
